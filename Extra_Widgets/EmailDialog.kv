<Content>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

    MDTextField:
        id: recipient
        hint_text: "To"
        pos_hint: {'center_x': .5, 'center_y': .6}
        size_hint_x: None
        width: "200dp"
        hint_text: "To"


    MDTextField:
        id: subject
        hint_text: "Subject"
    
    MDTextField:
        id: content
        hint_text: "Email Contents"

<CustomCancelButton>
    text: "CANCEL"
    theme_text_color: "Custom"
    text_color: self.theme_cls.primary_color
    on_release: app.cancel()

<CustomSendButton>
    text: "SEND"
    theme_text_color: "Custom"
    text_color: self.theme_cls.primary_color
    on_release: app.send()